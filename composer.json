{
    "name": "mattiabasone/minepic-api",
    "description": "Minepic Website and API service",
    "keywords": ["minepic", "avatar", "minecraft"],
    "license": "BSD-3-Clause",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "ext-gd":  "*",
        "ext-imagick":  "*",
        "ext-json":  "*",
        "laravel/lumen-framework": "^6.0",
        "vlucas/phpdotenv": "^3.3",
        "guzzlehttp/guzzle": "^6.2",
        "league/flysystem": "^1.0",
        "ramsey/uuid": "^3.8",
        "czim/laravel-repository": "^2.0",
        "league/fractal": "^0.18.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "barryvdh/laravel-debugbar": "^3.2",
        "barryvdh/laravel-ide-helper": "^2.6",
        "symplify/easy-coding-standard": "^6.1"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Minepic\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "fix": "@php vendor/bin/php-cs-fixer fix",
        "ihg": "@php artisan ide-helper:generate",
        "ecs-check": "@php vendor/bin/ecs check app",
        "ecs-fix": "@php vendor/bin/ecs check app --fix"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
