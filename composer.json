{
    "name": "mattiabasone/minepic-api",
    "description": "Minepic Website and API service",
    "keywords": ["minepic", "avatar", "minecraft"],
    "license": "BSD-3-Clause",
    "type": "project",
    "require": {
        "php": "^7.3",
        "ext-ctype":  "*",
        "ext-gd":  "*",
        "ext-imagick":  "*",
        "ext-intl":  "*",
        "ext-json":  "*",
        "ext-mbstring":  "*",
        "laravel/lumen-framework": "^6.0",
        "vlucas/phpdotenv": "^3.3",
        "guzzlehttp/guzzle": "^6.2",
        "league/flysystem": "^1.0",
        "ramsey/uuid": "^3.8",
        "czim/laravel-repository": "^2.0",
        "league/fractal": "^0.18.0",
        "swooletw/laravel-swoole": "^2.6"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "barryvdh/laravel-ide-helper": "^2.6",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Minepic\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "fix": "@php vendor/bin/php-cs-fixer fix",
        "ihg": "@php artisan ide-helper:generate",
        "ecs-check": "@php vendor/bin/ecs check app",
        "ecs-fix": "@php vendor/bin/ecs check app --fix"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
